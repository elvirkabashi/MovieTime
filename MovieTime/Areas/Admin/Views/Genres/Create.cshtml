@model MovieTime.Models.Genre

@{
    ViewData["Title"] = "Create";
}

<h4 class="text-white">Create Genre</h4>
<hr />
<div class="row text-white">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="GenreName" class="control-label"></label>
                <input asp-for="GenreName" class="form-control" placeholder="Add new genre"/>
                <span asp-validation-for="GenreName" class="text-danger"></span>
            </div>
            <div class="form-group float-end">
                <input type="submit" value="Create" class="btn btn-outline-warning my-3" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="text-warning">Back to List</a>
</div>

