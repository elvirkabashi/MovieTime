@model IEnumerable<MovieTime.Models.Genre>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-white">Genres</h1>

<p>
    <a asp-action="Create" class="text-warning">Create New</a>
</p>
<table class="table text-white">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.GenreName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.GenreName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.GenreId" class="text-warning">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.GenreId" class="text-warning">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
